include _common/_nav


doctype html
html(lang="ru-RU")
   head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible" content="IE = edge")
      meta(name="viewport" content="width = device-width, initial-scale = 1")
      title Online shop
      link(rel="stylesheet" href="css/main.css")
      link(rel="stylesheet" href="fonts/font.css")
      link(rel="stylesheet" href="bower/jquery-ui/themes/base/slider.css")
   body
      .wrapper
         include _common/_header
         +nav('nav', ['Планшеты', 'Мобильные телефоны', 'Mp3 плееры', 'Персональные компьютеры', 'Ноутбуки', 'Аксессуары', 'Бытовая техника'], 1)
         .container
             .breadcrumbs
                ul.breadcrumbs__list
                    - var items = ["Главная", "Каталог"]
                    each item in items
                        li(class="breadcrumbs__item" + ((item == "Каталог") ? ' active' : ''))
                            a(href="#").breadcrumbs__link= item
             h2.content-title Мобильные телефоны
             .main-container.clearfix
                 include _common/_sidebar
                 include _common/_content
             include _common/_text
         include _common/_footer
      script(src="bower/jquery/dist/jquery.js")
      script(src="bower/jquery-ui/jquery-ui.min.js")
      script(src="js/script.js")